<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:text="Chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gr"
        android:onClick="goChat"
        android:layout_centerHorizontal="true"
        android:id="@+id/chat" />

    <Button
        android:text="Notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/chat"
        android:onClick="goNot"
        android:id="@+id/notice" />

    <Button
        android:text="Set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notice"
        android:onClick="goSet"
        android:id="@+id/set" />

    <Button
        android:text="Gr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gr"
        android:onClick="goGr"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/chat"
        android:layout_alignBottom="@+id/notice" />

    <Button
        android:text="My"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my"
        android:onClick="goMy"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/chat"
        android:layout_marginEnd="89dp" />
</RelativeLayout>


