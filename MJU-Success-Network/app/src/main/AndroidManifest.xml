<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seunggabi.mju_success_network">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.menu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".model.DBProvider"
            android:authorities="com.seunggabi.mju_success_network"
            android:enabled="true"
            android:exported="true" />

        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".view.group.GroupInfoActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.group.GroupAddActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.group.GroupEditActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.menu.GroupActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.menu.JoinActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.menu.NoticeActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.menu.SettingActivity" android:launchMode="singleInstance" />
        <activity android:name=".view.chatting.ChattingActivity" android:launchMode="singleInstance" />
    </application>

</manifest>